@model dynamic

@{
    ViewBag.Title = "title";
    //Layout = "_Layout";
    ViewBag.ContentHeader = "Users";

    ViewBag.BreadCrumb = @"<li class='breadcrumb-item'><a href='/'>Home</a></li>
<li class='breadcrumb-item active'><a href='/Users'>Users</a></li>";
}

<div class="row">
    @*<div id="grid"></div>*@
    <div class="col-12">
        <div class="card p-3">
            @* Styles classes [display row-border stripe compact hover order-column 'table table-striped table-bordered' 'uk-table uk-table-hover uk-table-striped' 'uk-table-striped uk-table-hover'] *@
            <table id="example" class=" uk-table-striped uk-table-hover" style="width: 100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>PostalCode</th>
                        <th><a href='/AuthUsers/Edit' class=""><i class="fas fa-user-plus"></i> </a></th>
                    </tr>
                </thead>
                
            </table>
        </div>
    </div>
</div>


@section css
{
    @*<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />*@

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.2/css/uikit.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.uikit.min.css" rel="stylesheet" />
    
    <style>
        table.dataTable {
            border-spacing: 5px !important;
        }
        div.dataTables_wrapper div.row.uk-grid.dt-merge-grid {
            margin-top: 1em;
        }
    </style>

}

@section scripts
{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    @*<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>*@
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.uikit.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                //"processing": true,
                //"serverSide": true,
                'ajax': '/AuthUsers/Grid',
                    "columns": [
                        { "data": "Id" },
                        { "data": "UserName" },
                        { "data": "Email" },
                        { "data": "FirstName" },
                        { "data": "LastName" },
                        { "data": "PhoneNumber" },
                        { "data": "Address" },
                        { "data": "City" },
                        { "data": "State" },
                        { "data": "PostalCode" },
                        { "data": "ActionLink" }
                    ]
            });
        });
    </script>
}

